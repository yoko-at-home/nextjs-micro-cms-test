{
  "name": "nexst",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:eslint": "eslint --cache .",
    "lint:prettier": "prettier --check .",
    "fix": "run-s -l -c fix:eslint fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "test": "run-p -l -c --aggregate-output lint:* unit",
    "unit": "jest",
    "prepare": "husky install"
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "dependencies": {
    "@tailwindcss/forms": "0.3.4",
    "@tailwindcss/line-clamp": "0.2.2",
    "@tailwindcss/typography": "0.4.1",
    "axios": "^0.24.0",
    "budoux": "^0.0.1",
    "date-fns": "^2.26.0",
    "microcms-js-sdk": "^2.0.0",
    "microcms-richedit-processer": "^1.0.4",
    "next": "12.0.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.20.2",
    "react-hooks-use-modal": "^2.1.0",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@sendgrid/mail": "^7.6.0",
    "@testing-library/react": "12.1.2",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.9",
    "@types/react": "17.0.35",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "autoprefixer": "^10.4.0",
    "babel-jest": "27.3.1",
    "classcat": "^5.0.3",
    "eslint": "8.2.0",
    "eslint-config-next": "12.0.4",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-tailwindcss": "1.17.2",
    "husky": "7.0.4",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.3.1",
    "jest-watch-typeahead": "1.0.0",
    "keen-slider": "^5.5.1",
    "lint-staged": "12.0.3",
    "npm-run-all": "4.1.5",
    "postcss": "^8.3.11",
    "prettier": "2.4.1",
    "tailwindcss": "^2.2.19",
    "typescript": "4.5.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": "yarn fix:eslint",
    "*": "yarn fix:prettier"
  }
}
