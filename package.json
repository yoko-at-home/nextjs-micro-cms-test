{
  "name": "nexst",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:eslint": "eslint --cache .",
    "lint:prettier": "prettier --check .",
    "fix": "run-s -l -c fix:eslint fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "test": "run-p -l -c --aggregate-output lint:* unit",
    "unit": "jest",
    "prepare": "husky install"
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "dependencies": {
    "@tailwindcss/forms": "0.3.3",
    "@tailwindcss/line-clamp": "0.2.1",
    "@tailwindcss/typography": "0.4.1",
    "date-fns": "^2.24.0",
    "microcms-js-sdk": "^1.2.0",
    "microcms-richedit-processer": "^1.0.4",
    "next": "11.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.16.2",
    "react-hooks-use-modal": "^2.1.0"
  },
  "devDependencies": {
    "@sendgrid/mail": "^7.4.7",
    "@testing-library/react": "12.1.0",
    "@types/jest": "27.0.2",
    "@types/node": "16.9.1",
    "@types/react": "17.0.24",
    "@typescript-eslint/eslint-plugin": "4.31.2",
    "@typescript-eslint/parser": "4.31.2",
    "autoprefixer": "^10.3.6",
    "babel-jest": "27.2.2",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-tailwindcss": "1.15.0",
    "husky": "7.0.2",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.2.2",
    "jest-watch-typeahead": "0.6.4",
    "keen-slider": "^5.5.1",
    "lint-staged": "11.1.2",
    "npm-run-all": "4.1.5",
    "postcss": "^8.3.8",
    "prettier": "2.4.1",
    "tailwindcss": "^2.2.16",
    "typescript": "4.4.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": "yarn fix:eslint",
    "*": "yarn fix:prettier"
  }
}
